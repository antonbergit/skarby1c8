		ПоказатьПредупреждение(, НСтр("ru='Для вида расчета с признаком ""Аванс"" документом расчетов будет текущий!';uk='Для виду розрахунків з ознакою ""Аванс"" документом розрахунків буде поточний!'"));
		
	Иначе
		
		ЭтоРасчетыСПокупателями = Истина;
		
		СтруктураОтбор = Новый Структура();
		СтруктураОтбор.Вставить("Контрагент", Объект.Контрагент);
		
