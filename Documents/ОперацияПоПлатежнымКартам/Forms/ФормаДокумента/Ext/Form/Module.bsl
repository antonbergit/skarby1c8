	КонецЕсли;
	
	ИдентификаторУстройстваЭТ = Неопределено;
	ИдентификаторУстройстваФР = Неопределено;
	ОписаниеОшибки            = "";
	
	СуммаОперации       = 0;
	НомерКарты          = "";
	НомерСсылкиОперации = "";
	НомерЧекаЭТ         = "";
	СтрокаСлипЧека      = "";
	ВидКарты            = "";
	
	ПоказыватьПредупреждение = Ложь;
	//Если УправлениеНебольшойФирмойКлиент.ПроверитьВозможностьПечатиЧека(ЭтаФорма, ПоказыватьПредупреждение) Тогда
	Если ПроверитьВозможностьПечатиЧека(ПоказыватьПредупреждение) Тогда
		
		Если ИспользоватьПодключаемоеОборудование Тогда // Проверка на включенную ФО "Использовать ВО"
			
			Если МенеджерОборудованияКлиент.ОбновитьРабочееМестоКлиента()Тогда // Проверка на определенность рабочего места ВО
				
				// Выбор устройства ЭТ
				ИдентификаторУстройстваЭТ = ?(ЗначениеЗаполнено(ЭквайринговыйТерминал),
											  ЭквайринговыйТерминал,
											  Неопределено);
				
				Если ИдентификаторУстройстваЭТ <> Неопределено Тогда
					
					// Выбор устройства ФР
					ИдентификаторУстройстваФР = ?(ЗначениеЗаполнено(ФискальныйРегистратор),
												  ФискальныйРегистратор,
												  Неопределено);
					
					Если ИдентификаторУстройстваФР <> Неопределено
					 ИЛИ КассаККМИспользоватьБезПодключенияОборудования Тогда
						
						// Подключение устройства ЭТ
