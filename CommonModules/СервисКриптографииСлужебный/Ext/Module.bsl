		Сертификат.Вставить("Издатель", ПреобразоватьOID(SerialAndIssuer.Issuer));
		
		Если ЗначениеЗаполнено(Идентификатор) Тогда
			Сертификат.Вставить("Идентификатор", Идентификатор);
		КонецЕсли;
		
		Сертификаты.Добавить(Сертификат);
	КонецЦикла;
	
	Возврат Сертификаты;

