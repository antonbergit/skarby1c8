
//Процедура выполняет проверку корректности введенных ИНН и ЕГРПОУ
//Принимает на вход структуру
// Параметры передачи - структура
// Обязательные ключи структуры
//	СтранаРегистрации
//	ИНН
//	ЕДРПОУ
//	ЭтоЮрЛицо
//	ОшибокПоИННнет
//	ОшибокПоЕДРПОУнет
// Дополнительные ключи структуры
//	ЦветВыделенияНекорректногоЗначения
//
//Возвращает структуру с переменным набором ключей 
//только со значениями соответствующими результату проверки.
Функция ПроверитьКорректностьИННЕДРПОУ(Знач СтруктураПараметров) Экспорт
	
	Если СтруктураПараметров.Свойство("ЦветВыделенияНекорректногоЗначения") Тогда
		ЦветВыделенияНекорректногоЗначения = СтруктураПараметров.ЦветВыделенияНекорректногоЗначения;
	Иначе
		ЦветВыделенияНекорректногоЗначения = Новый Цвет(225, 40, 40);
	КонецЕсли;
	
	СтруктураВозврата = Новый Структура;
	
	Если СтруктураПараметров.ПроверитьИНН Тогда
		
		СтруктураВозврата.Вставить("ИННВведенКорректно",               Истина);
		СтруктураВозврата.Вставить("РасширенноеПредставлениеИНН",      СтруктураПараметров.ИНН);
		СтруктураВозврата.Вставить("НадписьПоясненияНекорректногоИНН", "");
		СтруктураВозврата.Вставить("ПустойИНН",                        Ложь);
		СтруктураВозврата.Вставить("ОшибокПоИННнет",                   СтруктураПараметров.ПроверитьИНН);
		
		ИНН      = СокрП(СтруктураПараметров.ИНН);
		ДлинаИНН = СтрДлина(ИНН);
		
		Если НЕ ЗначениеЗаполнено(ИНН) Тогда
			
			СтруктураВозврата.ИННВведенКорректно = Ложь;
			
			СтруктураВозврата.НадписьПоясненияНекорректногоИНН = Неопределено;
			
			СтруктураВозврата.ПустойИНН = Истина;
			
			СтруктураВозврата.ОшибокПоИННнет = Ложь;
			
		КонецЕсли;
		
		Если СтруктураВозврата.ОшибокПоИННнет Тогда
			
			ЭтоЮрЛицо = Неопределено;
			СтруктураПараметров.Свойство("ЭтоЮрЛицо", ЭтоЮрЛицо);
			
			Если ЭтоЮрЛицо = Неопределено Тогда
				
				СтруктураВозврата.ИННВведенКорректно = Ложь;
				СтруктураВозврата.НадписьПоясненияНекорректногоИНН = Новый ФорматированнаяСтрока(НСтр("ru='Неизвестен вид контрагента. Укажите вид контрагента';uk='Невідомий вид контрагента. Вкажіть вид контрагента'"),,ЦветВыделенияНекорректногоЗначения);
				
				СтруктураВозврата.ОшибокПоИННнет = Ложь;
				
			КонецЕсли;
			
			Если СтруктураВозврата.ОшибокПоИННнет Тогда
				
				Если  ЭтоЮрЛицо И ДлинаИНН <> 12 Тогда
					
					СтруктураВозврата.ИННВведенКорректно = Ложь;
					
					СтруктураВозврата.НадписьПоясненияНекорректногоИНН = Новый ФорматированнаяСтрока(НСтр("ru='ИНН юридического лица должен состоять из 12 цифр';uk='ІПН юридичної особи повинен складатися з 12 цифр'"),,ЦветВыделенияНекорректногоЗначения);
					
					ТекстДляНекорректногоИНН = НСтр("ru='%1"
"ИНН содержит не 12 цифр';uk='% 1"
"ІПН містить не 12 цифр'");
					
					СтруктураВозврата.РасширенноеПредставлениеИНН = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(ТекстДляНекорректногоИНН, ИНН);
					
					СтруктураВозврата.ОшибокПоИННнет = Ложь;
					
				ИначеЕсли НЕ ЭтоЮрЛицо  И ДлинаИНН <> 10 Тогда
					
					СтруктураВозврата.ИННВведенКорректно = Ложь;
					
					СтруктураВозврата.НадписьПоясненияНекорректногоИНН = Новый ФорматированнаяСтрока(НСтр("ru='ИНН физического лица должен состоять из 10 цифр';uk='ІПН фізичної особи повинен складатися з 10 цифр'"),,ЦветВыделенияНекорректногоЗначения);
					
					ТекстДляНекорректногоИНН = НСтр("ru='%1"
"ИНН содержит не 10 цифр';uk='% 1"
"ІПН містить не 10 цифр'");
					
					СтруктураВозврата.РасширенноеПредставлениеИНН = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(ТекстДляНекорректногоИНН, ИНН);
					
					СтруктураВозврата.ОшибокПоИННнет = Ложь;
					
				КонецЕсли;
				
				Если СтруктураВозврата.ОшибокПоИННнет Тогда
					
					Если НЕ СтроковыеФункцииКлиентСервер.ТолькоЦифрыВСтроке(ИНН) Тогда
						
						СтруктураВозврата.ИННВведенКорректно = Ложь;
						
						СтруктураВозврата.НадписьПоясненияНекорректногоИНН = Новый ФорматированнаяСтрока(НСтр("ru='ИНН должен включать только цифры';uk='ІПН повинен включати тільки цифри'"),,ЦветВыделенияНекорректногоЗначения);
						
						ТекстДляНекорректногоИНН = НСтр("ru='%1"
"ИНН содержит не только цифры';uk='% 1"
"ІПН містить не тільки цифри'");
						
						СтруктураВозврата.РасширенноеПредставлениеИНН = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(ТекстДляНекорректногоИНН, ИНН);
						
						СтруктураВозврата.ОшибокПоИННнет = Ложь;
						
					КонецЕсли;
					
				КонецЕсли;
				
			КонецЕсли;
			
		КонецЕсли;
		
	КонецЕсли;
	
	Если СтруктураПараметров.ПроверитьЕДРПОУ Тогда
		
		СтруктураВозврата.Вставить("ЕДРПОУВВеденКорректно",               Истина);
		СтруктураВозврата.Вставить("РасширенноеПредставлениеЕДРПОУ",      СтруктураПараметров.ЕДРПОУ);
		СтруктураВозврата.Вставить("НадписьПоясненияНекорректногоЕДРПОУ", "");
		СтруктураВозврата.Вставить("ПустойЕДРПОУ",                        Ложь);
		СтруктураВозврата.Вставить("ОшибокПоЕДРПОУнет",                   СтруктураПараметров.ПроверитьЕДРПОУ);
		
		Если СтруктураПараметров.СтранаРегистрации = ПредопределенноеЗначение("Справочник.СтраныМира.Украина") Тогда
			
			ЭтоЮрЛицо = Неопределено;
			СтруктураПараметров.Свойство("ЭтоЮрЛицо", ЭтоЮрЛицо);
			
			Если ЭтоЮрЛицо = Неопределено Тогда
				
				СтруктураВозврата.ЕДРПОУВведенКорректно = Ложь;
				
				СтруктураВозврата.НадписьПоясненияНекорректногоЕДРПОУ = Новый ФорматированнаяСтрока(НСтр("ru='Неизвестен вид контрагента. Укажите вид контрагента';uk='Невідомий вид контрагента. Вкажіть вид контрагента'"),,ЦветВыделенияНекорректногоЗначения);
				
				СтруктураВозврата.ОшибокПоЕДРПОУнет = Ложь;
				
			ИначеЕсли НЕ ЭтоЮрЛицо Тогда
				СтруктураВозврата.ОшибокПоЕДРПОУнет = Ложь;
			КонецЕсли;
			
			Если СтруктураВозврата.ОшибокПоЕДРПОУнет Тогда
				
				ЕДРПОУ = СокрП(СтруктураПараметров.ЕДРПОУ);
				ДлинаЕДРПОУ = СтрДлина(ЕДРПОУ);
				
				Если НЕ ЗначениеЗаполнено(ЕДРПОУ) Тогда
					
					СтруктураВозврата.ЕДРПОУВВеденКорректно = Ложь;
					
					СтруктураВозврата.НадписьПоясненияНекорректногоЕДРПОУ = Неопределено;
					
					СтруктураВозврата.ПустойЕДРПОУ = Истина;
					
					СтруктураВозврата.ОшибокПоЕДРПОУнет = Ложь;
					
				КонецЕсли;
				
				Если СтруктураВозврата.ОшибокПоЕДРПОУнет Тогда
					
					Если ДлинаЕДРПОУ < 8 Тогда
						
						СтруктураВозврата.ЕДРПОУВВеденКорректно = Ложь;
						
						СтруктураВозврата.НадписьПоясненияНекорректногоЕДРПОУ  = Новый ФорматированнаяСтрока(НСтр("ru='ЕДРПОУ должен содержать не менее 8 цифр';uk='ЄДРПОУ повинен містити не менш 8 цифр'"),,ЦветВыделенияНекорректногоЗначения);
						
						ТекстДляНекорректногоЕДРПОУ = НСтр("ru='%1"
"ЕДРПОУ содержит менее 8 цифр';uk='% 1"
"ЄДРПОУ містить менш 8 цифр'");
						
						СтруктураВозврата.РасширенноеПредставлениеЕДРПОУ = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(ТекстДляНекорректногоЕДРПОУ, ЕДРПОУ);
						
						СтруктураВозврата.ОшибокПоЕДРПОУнет = Ложь;
						
					КонецЕсли;
					
					Если СтруктураВозврата.ОшибокПоЕДРПОУнет Тогда
						
						Если НЕ СтроковыеФункцииКлиентСервер.ТолькоЦифрыВСтроке(ЕДРПОУ) Тогда
							
							СтруктураВозврата.ЕДРПОУВВеденКорректно = Ложь;
							
							СтруктураВозврата.НадписьПоясненияНекорректногоЕДРПОУ = Новый ФорматированнаяСтрока(НСтр("ru='ЕДРПОУ должен включать только цифры';uk='ЄДРПОУ повинен включати тільки цифри'"),,ЦветВыделенияНекорректногоЗначения);
							
							ТекстДляНекорректногоЕДРПОУ = НСтр("ru='%1"
"ЕДРПОУ содержит не только цифры';uk='% 1"
"ЄДРПОУ містить не тільки цифри'");
							
							СтруктураВозврата.РасширенноеПредставлениеЕДРПОУ = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(ТекстДляНекорректногоЕДРПОУ, ЕДРПОУ);
							
							СтруктураВозврата.ОшибокПоЕДРПОУнет = Ложь;
							
						КонецЕсли;
						
					КонецЕсли;
					
				КонецЕсли;
				
			КонецЕсли;
			
		КонецЕсли;
		
	КонецЕсли;
	
	Возврат СтруктураВозврата;
	
КонецФункции	

// Заполняет список значеий Приемник из списка значений Источник
//
Процедура ЗаполнитьСписокИзСписка(Источник,Приемник) Экспорт

	Приемник.Очистить();
	Для каждого ЭлСписка Из Источник Цикл
		Приемник.Добавить(ЭлСписка.Значение, ЭлСписка.Представление);
	КонецЦикла;

КонецПроцедуры

// Функция получает элементы, присутствующие в каждом массиве
//
// Параметры:
//  Массив1	 - массив	 - первый массив
//  Массив2	 - массив	 - второй массив
// Возвращаемое значение:
//  массив - массив значений, содержащихся в двух массивах
Функция ПолучитьСовпадающиеЭлементыМассивов(Массив1, Массив2) Экспорт
	
	Результат = Новый Массив;
	
	Для Каждого Значение Из Массив1 Цикл
		Если Массив2.Найти(Значение) <> Неопределено Тогда
			Результат.Добавить(Значение);
		КонецЕсли;
	КонецЦикла;
	
	Возврат Результат;
	
КонецФункции

